{{>partials/header}}
<main>
   <div class="container">
      <div class="row">
         <div class="col-6">
            <section class="card border-secondary">
               <header class="card-header bg-secondary text-white">
                  <h4 class="card-title">Formulário</h4>
               </header>
               <article class="card-body">
                  <form action="/user/create" method="post">
                     <div class="form-group mb-2">
                        <label>Nome: </label>
                        <input
                           type="text"
                           class="form-control"
                           name="firstName"
                        />
                     </div>
                     <div class="form-group mb-2">
                        <label>Sobrenome: </label>
                        <input
                           type="text"
                           class="form-control"
                           name="lastName"
                        />
                     </div>
                     <div class="form-group mb-2">
                        <label>Idade: </label>
                        <input type="text" class="form-control" name="age" />
                     </div>
                     <div class="form-group mb-2">
                        <label>Email: </label>
                        <input type="email" class="form-control" name="email" />
                     </div>
                     <div class="form-group mb-2">
                        <label>Interesses: </label>
                        <input
                           type="text"
                           class="form-control"
                           name="interesses"
                           placeholder="Separados por vírgula (,)"
                        />
                     </div>
                     <div class="form-group">
                        <button
                           type="submit"
                           class="btn btn-success"
                           name="Salvar"
                           value="true"
                        >
                           Salvar
                        </button>
                     </div>
                  </form>
               </article>
            </section>
         </div>
         <div class="col-6">
            <section class="card border-secondary mb-2">
               <header class="card-header bg-secondary text-white">
                  <h4 class="card-title">Resultados encontrados</h4>
               </header>
               <article class="card-body">
                  <form action="">
                     <div class="row">
                        <div class="form-group mb-2 col-4">
                           <label>Por: </label>
                           <select class="form-control" name="nPor">
                              <option value="">Todos</option>
                              <option value="name_like">Nomes</option>
                              <option value="name_equal">Nome Igual</option>
                              <option value="id">ID</option>
                              <option value="age_equal">Idade Igual</option>
                              <option value="age_up">Idade Maior</option>
                              <option value="age_up_equal">
                                 Idade Maior Igual
                              </option>
                              <option value="age_lower">Idade Menor</option>
                              <option value="age_lower_equal">
                                 Idade Menor Igual
                              </option>
                           </select>
                        </div>
                        <div class="form-group mb-2 col-8">
                           <label>Campo: </label>
                           <input type="text" class="form-control" />
                        </div>
                        <div class="form-group mb-2 col-4">
                           <button class="btn btn-warning">Buscar</button>
                        </div>
                     </div>
                  </form>
               </article>
            </section>

            <section class="card border-secondary">
               <header class="card-header bg-secondary text-white">
                  <h4 class="card-title">Resultados encontrados</h4>
               </header>
               <article class="card-body p-0">
                  <div class="table-responsive">
                     <table
                        class="table table-striped table-bordered align-middle"
                     >
                        <tr>
                           <th>Nome</th>
                           <th>Idade</th>
                           <th width="150px">Ação</th>
                        </tr>
                        {{#listUsers}}
                        <tr>
                           <td>{{ name.firstName }} {{ name.lastName }}</td>
                           <td>{{ age }}</td>
                           <td>
                              <a
                                 href="/user/update/{{ _id }}"
                                 class="btn btn-primary btn-sm"
                              >
                                 Editar
                              </a>
                              <a
                                 href="/user/remove/{{ _id }}"
                                 class="btn btn-sm btn-danger"
                              >
                                 Excluir
                              </a>
                           </td>
                        </tr>
                        {{/listUsers}}
                        {{^listUsers}}
                        <tr>
                           <td colspan="3">Nenhum resultado encontrado!</td>
                        </tr>
                        {{/listUsers}}
                     </table>
                     <div class="alert alert-danger m-2" role="alert">
                        Nenhum resultado encontrado!
                     </div>
                  </div>
               </article>
            </section>
         </div>
      </div>
   </div>
</main>
{{>partials/footer}}
