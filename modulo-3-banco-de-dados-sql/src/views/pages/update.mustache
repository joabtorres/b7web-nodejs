{{>partials/header}}

<main>
   <div class="container">
      <div class="row">
         <div class="offset-3 col-6">
            <section class="card border-secondary">
               <header class="card-header bg-secondary text-white">
                  <h4 class="card-title">Formulário</h4>
               </header>
               <article class="card-body">
               {{#UserForm}}
                  <form action="/user/updated" method="post">
                  <input type="hidden" name="id" value="{{id}}"/>
                     <div class="form-group mb-2">
                        <label>Nome: </label>
                        <input
                           type="text"
                           class="form-control"
                           name="firstName"
                           value={{first_name}}
                        />
                     </div>
                     <div class="form-group mb-2">
                        <label>Sobrenome: </label>
                        <input
                           type="text"
                           class="form-control"
                           name="lastName"
                           value="{{last_name}}"
                        />
                     </div>
                     <div class="form-group mb-2">
                        <label>Idade: </label>
                        <input type="number" class="form-control" name="age"  value="{{age}}"/>
                     </div>
                     <div class="form-group">
                        <button
                           type="submit"
                           class="btn btn-success"
                           name="Salvar"
                           value="true"
                        >
                           Salvar
                        </button>
                     </div>
                  </form>
                  {{/UserForm}}
               </article>
            </section>
         </div>
      </div>
      <div class="row">
            <div class="offset-3 col-6  text-center">
                <a href="/" class="btn btn-primary mt-2">Voltar para a Página Principal</a>
            </div>
      </div>
   </div>
</main>

{{>partials/footer}}
