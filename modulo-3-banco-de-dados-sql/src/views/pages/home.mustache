{{>partials/header}}

<main>
   <div class="container">
      <div class="row">
         <div class="col-6">
            <section class="card border-secondary">
               <header class="card-header bg-secondary text-white">
                  <h4 class="card-title">Formulário</h4>
               </header>
               <article class="card-body">
                  <form action="/user/created" method="post">
                     <div class="form-group mb-2">
                        <label>Nome: </label>
                        <input
                           type="text"
                           class="form-control"
                           name="firstName"
                        />
                     </div>
                     <div class="form-group mb-2">
                        <label>Sobrenome: </label>
                        <input
                           type="text"
                           class="form-control"
                           name="lastName"
                        />
                     </div>
                     <div class="form-group mb-2">
                        <label>Idade: </label>
                        <input type="number" class="form-control" name="age" />
                     </div>
                     <div class="form-group">
                        <button
                           type="submit"
                           class="btn btn-success"
                           name="Salvar"
                           value="true"
                        >
                           Salvar
                        </button>
                     </div>
                  </form>
               </article>
            </section>
         </div>
         <div class="col-6">
            <section class="card border-secondary mb-2">
               <header class="card-header bg-secondary text-white">
                  <h4 class="card-title">Resultados encontrados</h4>
               </header>
               <article class="card-body">
                  <form action="">
                     <div class="row">
                        <div class="form-group mb-2 col-4">
                           <label>Por: </label>
                           <select class="form-control" name="type_search">
                              <option value="">Todos</option>
                              <option value="name_equal">Nome Igual</option>
                              <option value="name_like">Nomes</option>
                              <option value="id">ID</option>
                              <option value="age_equal">Idade Igual</option>
                              <option value="age_up">Idade Maior</option>
                              <option value="age_up_equal">
                                 Idade Maior Igual
                              </option>
                              <option value="age_lower">Idade Menor</option>
                              <option value="age_lower_equal">
                                 Idade Menor Igual
                              </option>
                           </select>
                        </div>
                        <div class="form-group mb-2 col-8">
                           <label>Campo: </label>
                           <input
                              type="text"
                              class="form-control"
                              name="search"
                           />
                        </div>
                        <div class="form-group mb-2 col-4">
                           <button class="btn btn-warning">Buscar</button>
                        </div>
                     </div>
                  </form>
               </article>
            </section>

            <section class="card border-secondary">
               <header class="card-header bg-secondary text-white">
                  <h4 class="card-title">Resultados encontrados</h4>
               </header>
               <article class="card-body p-0">
                  <div class="table-responsive">
                     <table
                        class="table table-striped table-bordered align-middle"
                     >
                        <tr>
                           <th width="40px">id</th>
                           <th>Nome</th>
                           <th>Idade</th>
                           <th width="150px">Ação</th>
                        </tr>
                        {{#users}}
                        <tr>
                           <td>{{ id }}</td>
                           <td>{{ full_name }}</td>
                           <td>{{ age }}</td>
                           <td>
                              <a
                                 href="/user/updated/{{ id }}"
                                 class="btn btn-primary btn-sm"
                              >
                                 Editar
                              </a>
                              <a
                                 href="/user/removed/{{ id }}"
                                 class="btn btn-sm btn-danger"
                              >
                                 Excluir
                              </a>
                           </td>
                        </tr>
                        {{/users}}
                        {{^users}}
                        <tr>
                           <td colspan="4">Nenhum resultado encontrado!</td>
                        </tr>
                        {{/users}}
                     </table>
                  </div>
               </article>
            </section>
         </div>
      </div>
   </div>
</main>

{{>partials/footer}}
